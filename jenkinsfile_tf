currentBuild.displayName = "Terraform-Deployment-#" + currentBuild.number 

pipeline {

    agent any
    
    environment {
    
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_REGION            = us-east-2
        TF_IN_AUTOMATION      = '1'
        ENV                   = dev
        ENV_VAR_PATH          = dev.tfvars
        SRC_PATH              = aws
    }

    stages {
    
    
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/lanru2001/Nodejs-React-App.git' ]]])     
            }
        } 
        
         stage('Plan') {
            steps {
                script {  
                
                     sh ' terraform init '
                     sh ' terraform fmt '                
                
                }
            }
    
         }
         
        stage('Plan') {
            steps {
                script {
                    
                     sh ' terraform init '
                     sh ' terraform fmt '
                     sh ' terraform validate '
                     sh ' terraform plan  -var-file=./$SRC_PATH/$ENV/$ENV_VAR_PATH  -auto-approve  -var region=$AWS_REGION '               
                }
            }
            
        }

        stage('Apply') {
            steps {
                sh ' terraform apply  -var-file=./$SRC_PATH/$ENV/$ENV_VAR_PATH  -auto-approve  -var region=$AWS_REGION ' 
                sh ' terraform show '
            }
        }
    }
}
