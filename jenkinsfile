currentBuild.displayName = "react-nodejs-app-#" + currentBuild.number 

pipeline {
    agent any
    environment {
       
       IMAGE="${PROJECT}:${VERSION}"
       PROJECT="node-app"
       VERSION="latest"
       registry ="873079457075.dkr.ecr.us-east-2.amazonaws.com/node-app"
    }
   
    stages {
        
        stage('Cloning Git') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '', url: 'https://github.com/lanru2001/nodejs-react-application.git']]])     
            }
        }
  
        stage('Building image') {
            steps {
                script {
                    
                    sh  "docker build -t '${IMAGE}'  /var/lib/jenkins/workspace/nodejs_application" 
                    
                }
            }    
        }
        
        stage('Push to ECR') {
            steps {
                script {
                    sh "aws ecr get-login-password --region us-east-2 | docker login --username AWS --password-stdin 873079457075.dkr.ecr.us-east-2.amazonaws.com"
                    
                    sh "docker tag ${PROJECT}:latest  873079457075.dkr.ecr.us-east-2.amazonaws.com/${PROJECT}:latest"
                    
                    sh "docker push  873079457075.dkr.ecr.us-east-2.amazonaws.com/${PROJECT}:latest"
                } 
            }
        }
        
    }    
    
}
